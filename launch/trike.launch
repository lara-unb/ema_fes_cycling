<launch>
  <group ns="ema_fes_cycling">
    <!-- load config files-->
    <rosparam command="load" file="$(find ema_fes_cycling)/config/trike.yaml" ns="config" />
    <rosparam command="load" file="$(find ema_fes_cycling)/config/imu.yaml" ns="imu" />
    <rosparam command="load" file="$(find ema_fes_cycling)/config/stimulator.yaml" ns="stimulator" />
    <rosparam command="load" file="$(find ema_fes_cycling)/config/control.yaml" ns="control" />

    <!-- launch nodes -->
    <node name="imu" pkg="ema_fes_cycling" type="imu_node.py" output="log" respawn="true" respawn_delay="5"/>
    <node name="stimulator" pkg="ema_fes_cycling" type="stimulator_node.py" output="log" respawn="true" respawn_delay="5"/>
    <node name="control" pkg="ema_fes_cycling" type="control_node.py" output="screen" respawn="true" respawn_delay="5"/>
    <node name="ema_fes_cycling" pkg="ema_fes_cycling" type="server.py" output="screen" respawn="true" respawn_delay="5"/>
  </group>

  <!-- launch utils -->
  <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ema_fes_cycling)/config/rviz/imu.rviz" output="log" respawn="true" respawn_delay="5"/>
  <node name="rqt_graph" pkg="rqt_graph" type="rqt_graph" output="log" respawn="true" respawn_delay="5"/>
  <node name="rqt_plot" pkg="rqt_plot" type="rqt_plot" output="log" respawn="true" respawn_delay="5"/> -->
</launch>
